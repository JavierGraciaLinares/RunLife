<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_red"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.alumno.runlife.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayoutLoginUp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_weight="0.39"
            app:srcCompat="@drawable/conejo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="0.15"
            android:text="RUN LIFE"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLoginDown"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/botonLoginGoogle"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></com.google.android.gms.common.SignInButton>
    </LinearLayout>
</LinearLayout>
