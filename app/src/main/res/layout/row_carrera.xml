<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewHistorialDistancia"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewCarreraFecha"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCarreraFecha"
        app:srcCompat="@drawable/ubication64px" />

    <TextView
        android:id="@+id/textViewCarreraFecha"
        android:layout_width="207dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="fill_vertical"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCarreraFecha"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintLeft_toRightOf="@+id/imageViewCarreraFecha"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewCarreraFecha"
        app:layout_constraintVertical_bias="0.6"
        tools:layout_editor_absoluteX="131dp" />

    <ImageView
        android:id="@+id/imageViewCarreraFecha"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/textViewCarreraDistancia"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarreraNombre"
        app:srcCompat="@drawable/calendar" />

    <TextView
        android:id="@+id/textViewCarreraLugar"
        android:layout_width="212dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewHistorialDistancia"
        app:layout_constraintLeft_toRightOf="@+id/imageViewHistorialDistancia"
        app:layout_constraintTop_toTopOf="@+id/imageViewHistorialDistancia" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="57dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical|center"
        android:text="KM"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        app:layout_constraintLeft_toLeftOf="@+id/textViewCarreraDistancia"
        app:layout_constraintRight_toRightOf="@+id/textViewCarreraDistancia"
        app:layout_constraintTop_toBottomOf="@+id/textViewCarreraDistancia" />

    <TextView
        android:id="@+id/textViewCarreraDistancia"
        android:layout_width="82dp"
        android:layout_height="69dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCarreraNombre"
        android:layout_width="261dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/textViewCarreraDistancia"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="94dp" />

</android.support.constraint.ConstraintLayout>
